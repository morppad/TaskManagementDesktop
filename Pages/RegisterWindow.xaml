<Page x:Class="TaskManagment.Pages.RegisterWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManagment.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterWindow">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Register" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
            <TextBox x:Name="NameTextBox"  Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox"  Margin="0,0,0,10"/>
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed"/>
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,10,0,0"/>
            <Button Content="Back to Login" Click="SwitchToLogin_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
